{
	"features": {
	        //
		// Controls the zooming modes,
		// This should remain the same as provided unless you have to change this for a reason.
		//
		"reduce_sensitivity": true,
		"zoom_transition": "SMOOTH",
		"zoom_mode": "HOLD",
		//
		// Controls the binding system for zoom.
		//
		"zoom_scrolling": true,
		"extra_keybinds": false,
		"zoom_overlay": false
	},
	"values": {
		//
		// The values used for the zoom feature,
		// We recommend not changing these values unless you have to change this for a reason.
		//
		"zoom_divisor": 4.0,
		"minimum_zoom_divisor": 1.0,
		"maximum_zoom_divisor": 50.0,
		"scroll_step": 1.0,
		"lesser_scroll_step": 0.5,
		"cinematic_multiplier": 4.0,
		"smooth_multiplier": 0.75,
		"minimum_linear_step": 0.125,
		"maximum_linear_step": 0.25
	},
	"tweaks": {
		//
		// Tweak utilities used for zooming feature,
		// These should remain disabled at all costs.
		//
		"reset_zoom_with_mouse": false,
		"unbind_conflicting_key": false,
		"print_owo_on_start": false,
		"hide_zoom_overlay": false
	}
}
