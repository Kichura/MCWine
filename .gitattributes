# Java related file extensions.
*.java          text diff=java
*.class         binary diff=java
*.groovy        text diff=java
*.scala         text diff=java
*.gradle        text diff=java
*.jar           binary diff=java

# JavaScript related file extensions.
*.json          text diff=javascript
*.json5         text diff=javascript
*.js            text diff=javascript
*.mjs           text diff=javascript
*.jsonld        text diff=javascript
*.toml          text diff=javascript
*.yml           text diff=javascript

# Kotlin related file extensions.
*.kt            text diff=kotlin
*.kts           text diff=kotlin
*.gradle.kts    text diff=kotlin

# Document file extensions.
*.doc      diff=astextplain
*.docx     diff=astextplain
*.pdf      diff=astextplain
*.rtf      diff=astextplain
*.md       text diff=markdown
*.txt      text

# Image file extensions.
*.bmp      binary
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.svg      binary
*.webp     binary

# Archive file extensions.
*.7z       binary
*.rar      binary
*.tar      binary
*.zip      binary

